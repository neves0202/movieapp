<%= form_for @article do |f| %>
  <fieldset>
    <div class="fields">
      <%= f.label :questions %>
      <%= f.text_field :questions %>
    </div>
    <div class="fields">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 15, :style => "width: 700px;" %>
    </div>
    <div class="fields">
      <%= f.label :category %>
      <%= f.text_field :category %>
    </div>
  </fieldset>
  <%= f.submit %>
<% end %>